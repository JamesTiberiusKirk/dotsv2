# i3status configuration file
# see "man i3status" for documentation.

general {
        colors = true
        output_format = "i3bar"
        interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "read_file LATENCY"
order += "battery all"
order += "read_file BRIGHTNESS"
order += "volume master"
order += "disk /"
order += "cpu_usage"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

read_file BRIGHTNESS {
        format = "â˜€ %content"
        path = "/sys/class/backlight/nvidia_0/brightness"
}

read_file LATENCY {
        format = "â± %content"
        path = "/tmp/i3status_latency"
}

volume master {
        format = "ğŸ”Š %volume"
        format_muted = "ğŸ”‡ muted"
        device = "pulse"
}

disk "/" {
        format = "ğŸ’¾ %avail"
}

cpu_usage {
        format = "ğŸ“Š %usage"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
